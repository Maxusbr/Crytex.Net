
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>SignalR Simple Chat</title>
    <style type="text/css">
        .container {
            background-color: #99CCFF;
            border: thick solid #808080;
            padding: 20px;
            margin: 20px;
        }
    </style>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/signalr")
    <script src='/signalr/js'></script>
</head>
<body>
    <div class="container">
        <input type="text" id="message" />
        <input type="button" id="sendmessage" value="sendmessage"/>
        <input type="button" id="sybscribe" value="sybscribe"/>
        <input type="button" id="getVMs" value="getVMs" />g

        <input type="hidden" id="displayname" />
        <ul id="discussion"></ul>
    </div>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <!--Add script to update the page and send messages.-->
    <script type="text/javascript">
        $(function () {
            // Declare a proxy to reference the hub.
            var chat = $.connection.monitorHub;
            // Create a function that the hub can call to broadcast messages.
            chat.client.recieveVmMessage = function (stateMachine) {
                // Html encode display name and message.
                var encodedName = $('<div />').text("server" + stateMachine.Date).html();
                var encodedMsg = $('<div />').text(stateMachine.VmId).html();
                // Add the message to the page.
                $('#discussion').append('<li><strong>' + encodedName
                    + '</strong>:&nbsp;&nbsp;' + encodedMsg + '</li>');
            };

            // Get the user name and store it to prepend to messages.
            $('#displayname').val("browserClient");
            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sybscribe').click(function () {
                    // Call the Send method on the hub.
                    chat.server.sybscribe("56BCA6D5-B966-E511-8256-001D9264FC4D");
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
                $('#getVMs').click(function () {
                    // Call the Send method on the hub.
                    
                    chat.server.getVMs();
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.sendVmMessage("56BCA6D5-B966-E511-8256-001D9264FC4D", { CpuLoad: 2, RamLoad: 9223 });
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });
    </script>
</body>
</html>
